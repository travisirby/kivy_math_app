# File name: hello.kv
#:kivy 1.8.0

<MyButton@Button>
    color: 1,1,1,1
    background_color: 1,1,1,.5

<MyLabel@Label>
    font_size: '50sp'


<MyWidget>:

    TextInput:
        id: input
        pos: root.right /2 - self.width /2, self.height
        multiline: False
        size: 300,100
        font_size: '50sp'
        on_text_validate: root.entered(self.text)

    MyLabel:
        id: questionLabel
        text: root.generateQuestion()
        pos:   root.right /2 - self.width /2, root.top - self.height
        size: root.right, 100

    MyLabel:
        id: answerLabel
        pos:   root.right /2 - self.width /2, root.top /2 - self.height /2


