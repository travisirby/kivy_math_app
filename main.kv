# File name: hello.kv
#:kivy 1.8.0

<MyButton@Button>
    color: 1,1,1,1
    background_color: 1,1,1,.5

<MyLabel@Label>
    font_size: '50sp'


<MyWidget>:
    TextInput:
        id: input
        pos: root.right /2 - self.width /2, self.height
        multiline: False
        size: 300,100
        font_size: '50sp'
        on_text_validate: root.user_answer_submitted(self.text)

    MyLabel:
        id: questionLabel
        text: root.new_question()
        pos:   root.right /2 - self.width /2, root.top - self.height
        size: root.right, 100
        markup: True

    MyLabel:
        id: answerLabel
        pos:   root.right /2 - self.width /2, root.top /2 - self.height /2

<TitleWidget>:
    Label:
        id: mainTitle
        text: "Algebra App"
        pos:   root.right /2 - self.width /2, root.top /2 - self.height /2
        size: root.right, 200
        font_size: '150sp'

    MyButton:
        id: startButton
        text: "Start"
        pos: root.right /2, self.height
        on_press: root.parent.goto_questions()
